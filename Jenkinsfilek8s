pipeline {
    agent any 
    options {
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
				execAnt("compile")
            }
        }
    }
}

def execAnt(String arguments) {
	execute("ant " + arguments)
}

def execute(String command) {
    if (isUnix()) {
        sh command
    } else {
        bat command
    }
}


